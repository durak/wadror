<p id="notice"><%= notice %></p>

<h1>Listing Beer Styles</h1>

<p> Number of styles: <%= @styles.count %></p>

<table class="table table-hover">
  <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>
  </thead>

  <tbody>
  <% @styles.each do |style| %>
      <tr>
        <td><%= link_to style.name, style %></td>
        <td><%= style.description %></td>

      </tr>
  <% end %>
  </tbody>
</table>


